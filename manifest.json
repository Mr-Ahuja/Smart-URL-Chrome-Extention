{
    "manifest_version":  3,
    "name":  "Copy URL Smartly - CURLs",
    "short_name":  "CURLs",
    "version":  "1.0.0",
    "description":  "Copy a clean, labeled link of the current tab to your clipboard (HTML + plain text).",
    "action":  {
                   "default_icon":  {
                                        "16":  "icons/icon16.png",
                                        "32":  "icons/icon32.png",
                                        "48":  "icons/icon48.png",
                                        "128":  "icons/icon128.png",
                                        "24":  "icons/icon24.png"
                                    },
                   "default_popup":  "popup.html",
                   "default_title":  "Smart URL"
               },
    "icons":  {
                  "16":  "icons/icon16.png",
                  "32":  "icons/icon32.png",
                  "48":  "icons/icon48.png",
                  "128":  "icons/icon128.png"
              },
    "permissions":  [
                        "activeTab",
                        "tabs"
                    ],
    "author":  "Preetam Ahuja",
    "homepage_url":  "https://curls.thechosenone.in/"
}
